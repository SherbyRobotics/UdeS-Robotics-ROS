<launch>

  <node pkg="slash_teleop" type="slash_teleop.py" name="slash_teleop">
  </node>

  <node pkg="joy" type="joy_node" name="joystick" >
    <param name="deadzone" value="0.0" />
  </node>

  <node pkg="rosserial_python" type="serial_node.py" name="arduino_serial_node" >
    <param name="port" value="/dev/ttyACM0"/>
  </node>

  <node pkg="slash_propulsion" type="dual_propulsion.py" name="PROPULSION" output="screen">
    <param name="KpCC5" value="0.1"/>
    <param name="KiCC5" value="0.1"/>
  </node>

  <node pkg="slash_planif" type="planif_dual_prop.py" name="PLANIFICATION" output="screen">
  </node>

  <arg name="record_msgs" default="true" />

  <node pkg="rosbag" type="record" name="rosbag_record"
       args="record -o /home/nvidia/catkin_ws/src/UdeS-Robotics-ROS/projects/slash/slash_datalogging/bagfiles/DataBag.bag -a "
       if="$(arg record_msgs)" />


</launch>
