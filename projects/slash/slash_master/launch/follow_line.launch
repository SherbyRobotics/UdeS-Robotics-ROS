<launch>

  <node pkg="vision" type="custom_cv_camreader.py" name="CAM_reader">
  </node>

  <node pkg="slash_vision" type="line_following.py" name="CAM_treatments" output="screen">
  </node>

  <node pkg="slash_controller" type="pp_line.py" name="CONTROLLER" output="screen">
  </node>

  <node  pkg="tf" type="static_transform_publisher" name="laser_tf_publisher" args="-0.0313 0 0.216 3.14159265 0 0 base_footprint laser 100" />

  <node pkg="joy" type="joy_node" name="joy" >
      <param name="dev" value="/dev/input/js0" />
      <param name="deadzone" value="0.2" />
      <param name="autorepeat_rate" value="5" />
      <param name="coalesce_interval" value="0.01" />
  </node>

  <node pkg="racecar_udes" type="gamepad_pp.py" name="gamepad"/>
  <node pkg="racecar_udes" type="bicycle_odometry.py" name="odometry" output="screen"/>

  <node pkg="rosserial_python" type="serial_node.py" name="rosserial" >
      <param name="port" value="/dev/ttyACM0"/>
      <param name="baud" value="230400"/>
  </node>


</launch>
